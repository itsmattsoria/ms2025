---
import Journal from '../../../layouts/Journal.astro';
import { getEntries } from '../../../components/EntriesFetch.astro';

export async function getStaticPaths() {
  let entriesQuery = `{
    entries(site: "personal", section: "personalJournalCategories") {
      id
      title
      slug
    }
  }`;
  let entries = await getEntries(entriesQuery);
  return entries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry }, // Pass the full entry data as props
  }));
}

const { entry } = Astro.props;

let postQuery = `{
  entries(site: "personal", section: "personalJournal", type: "journal_writing", category: ${entry.id}) {
    id
    title
    slug
    postDate
    ... on journal_writing_Entry {
      category(status: ["live"]) {
        title
        status
        slug
      }
      image {
        ... on personal_Asset {
          alt
          url
          title
          focalPoint
          width
          height
          captionSimple
        }
      }
    }
  }
}`;
const posts = await getEntries(postQuery);

let linksQuery = `{
  entries(site: "personal", section: "personalJournal", type:"journal_external", category: ${entry.id}) {
    id
    title
    slug
    postDate
    ... on journal_external_Entry {
      externalLink
      sourceAuthor
      note
      externalType
      category(status: ["live"]) {
        title
        status
        slug
      }
    }
  }
}`;
const links = await getEntries(linksQuery);
---

<Journal title={'Journal: ' + entry.title} posts={posts} links={links} />
