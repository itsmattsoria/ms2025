---
// LastFM Recent Track Component
// Fetches and displays the most recent track from LastFM on page load
---

<div class="lastfm-track" id="lastfm-track">
  <div class="lastfm-loading">
    <div class="loading-placeholder noisy-border">
      <div class="album-art-loading">
        <div class="album-art-wrapper"></div>
      </div>
    </div>
    <div class="loading-text">
      <div class="pill">Loading...</div>
    </div>
  </div>
</div>

<script>
  import { getRecentTrack, checkNSFWTag } from '../utils/lastfm';

  async function loadLastFMTrack() {
    const container = document.getElementById('lastfm-track');
    if (!container) return;

    try {
      const track = await getRecentTrack('itsmattsoria');
      
      if (track) {
        const statusText = track.nowPlaying ? 'Now listening to' : 'Recently jammed to';
        const statusClass = track.nowPlaying ? 'status-now-playing' : 'status-recent';
        
        // Render immediately with loading state on album art (no image yet)
        container.innerHTML = `
          <a href="${track.url}" target="_blank" rel="noopener noreferrer" class="lastfm-link">
            <div class="track-content">
              <div class="album-art album-art-loading noisy-border">
              </div>
              <div class="track-info">
                <h2 class="status-badge pill ${statusClass}">${statusText}</h2>
                <div class="track-name basic-link">${track.name}</div>
                <div class="artist-name">By ${track.artist}</div>
              </div>
            </div>
          </a>
        `;

        // Determine if artwork should be blocked
        let shouldBlockArtwork = false;
        
        if (track.image && track.artist && track.album) {
          // Check Last.fm API for NSFW tag
          shouldBlockArtwork = await checkNSFWTag(track.artist, track.album, 'itsmattsoria');
        }

        const albumArtEl = container.querySelector('.album-art');
        if (albumArtEl) {
          // Remove loading state
          albumArtEl.classList.remove('album-art-loading');

          // Show image or fallback based on check result
          if (shouldBlockArtwork || !track.image) {
            albumArtEl.innerHTML = `<div class="album-art-fallback"><div><div class="text-label">Album</div>${track.album}</div></div>`;
          } else {
            // Create image with fade-in effect using lazysizes classes
            const imgWrapper = document.createElement('div');
            imgWrapper.className = 'album-art-wrapper';
            const img = document.createElement('img');
            img.src = track.image;
            img.alt = `Album art for ${track.album}`;
            img.className = 'lazyload';
            img.onload = () => {
              img.classList.remove('lazyload');
              img.classList.add('lazyloaded');
            };
            albumArtEl.appendChild(imgWrapper);
            imgWrapper.appendChild(img);
          }
        }
      } else {
        container.innerHTML = `
          <div class="lastfm-error">
            <p>Unable to load recent track</p>
          </div>
        `;
      }
    } catch (error) {
      console.error('Error loading LastFM track:', error);
      container.innerHTML = `
        <div class="lastfm-error">
          <p>Unable to load recent track</p>
        </div>
      `;
    }
  }

  // Load track when page loads
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', loadLastFMTrack);
  } else {
    loadLastFMTrack();
  }
</script>

<style is:global>
  .lastfm-track {
    width: 100%;
    position: relative;
    container: lastfm-track / inline-size;
  }

  .lastfm-loading,
  .lastfm-error {
    width: 100%;
    display: flex;
    gap: var(--spacing-s);
    aspect-ratio: 2.25 / 1;
    align-items: flex-start;
    font-size: var(--step--1);
    color: var(--color-text-secondary);
  }

  .loading-placeholder {
    width: 100%;
    position: relative;
  }
  .loading-placeholder .album-art-wrapper {
    width: 100%;
    overflow: hidden;
    position: relative;
    aspect-ratio: 1 / 1;
    border-radius: 1.5em;
    corner-shape: squircle;
  }

  .loading-text {
    min-width: 180px;
  }

  .lastfm-error p {
    margin: 0;
  }

  .lastfm-link {
    display: block;
    text-decoration: none;
  }

  .lastfm-link:hover,
  .lastfm-link:focus-visible {
    .album-art-wrapper,
    .album-art-fallback,
    .album-art-placeholder {
      transform: scale(1.02);
    }
  }

  .track-content {
    display: flex;
    gap: var(--spacing-s);
    align-items: flex-start;

    @container lastfm-track (max-width: 300px) {
      flex-direction: column;
    }
  }

  .album-art {
    width: 100%;
    position: relative;
    aspect-ratio: 1 / 1;
    border-radius: 1.5em;
    corner-shape: squircle;

    .album-art-wrapper {
      overflow: hidden;
      position: relative;
      border-radius: 1.5em;
      corner-shape: squircle;
      transition: transform 0.2s ease-out;
    }

    img {
      width: 100%;
      height: 100%;
      display: block;
      object-fit: cover;
      transition-duration: 0.5s;
    }

    .album-art-fallback,
    .album-art-placeholder {
      width: 100%;
      height: 100%;
      display: flex;
      line-height: 1;
      text-wrap: balance;
      border-radius: 1.5em;
      align-items: flex-end;
      corner-shape: squircle;
      font-size: var(--step--1);
      padding: var(--spacing-2xs);
      color: var(--color-highlight);
      transition: transform 0.2s ease-out;
      font-weight: var(--font-weight-regular);
      border: 1px solid var(--color-highlight);
      background-color: var(--color-background);

      .text-label {
        margin-block-end: var(--spacing-3xs);
      }
    }
  }

  .album-art-loading {
    position: relative;

    .album-art-wrapper {
      background-color: var(--color-highlight);
      &::after {
        inset: 0;
        content: '';
        position: absolute;
        border-radius: 1.5em;
        corner-shape: squircle;
        animation: loading-shimmer 2s infinite;
        background: linear-gradient(
          90deg,
          transparent,
          oklch(var(--color-parts-background) / 50%),
          transparent
        );
      }
    }
  }

  @keyframes loading-shimmer {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(100%);
    }
  }

  .track-info {
    flex-grow: 1;
    min-width: 180px;
    max-width: 180px;
    text-wrap: pretty;
  }

  .status-badge {
    display: block;
    width: max-content;
    margin-block-end: var(--spacing-2xs);
  }

  .status-now-playing {
    color: var(--color-highlight);
    background-color: oklch(var(--color-parts-highlight) / 20%);
  }

  .status-recent {
    color: var(--color-text-secondary);
    background-color: oklch(var(--color-parts-text) / 10%);
  }

  .track-name {
    display: inline;
    line-height: 1.2;
    font-size: var(--step-0);
  }

  .artist-name {
    font-size: var(--step--1);
    color: var(--color-text-secondary);
    margin-block-start: var(--spacing-3xs);
  }
</style>
