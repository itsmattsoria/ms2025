---
// LastFM Recent Track Component
// Fetches and displays the most recent track from LastFM on page load
import arrowSvg from '../assets/arrow.svg?raw';
---

<div class="lastfm-track" id="lastfm-track" data-arrow-svg={arrowSvg}>
  <div class="lastfm-loading">
    <span class="loading-text pill">Loading recent track...</span>
  </div>
</div>

<script>
  import { getRecentTrack, checkNSFWTag } from '../utils/lastfm';

  async function loadLastFMTrack() {
    const container = document.getElementById('lastfm-track');
    const arrowSvg = container?.getAttribute('data-arrow-svg') || '';
    if (!container) return;

    try {
      const track = await getRecentTrack('itsmattsoria');
      
      if (track) {
        console.log(track);
        const statusText = track.nowPlaying ? 'Now listening to' : 'Recently listened to';
        const statusClass = track.nowPlaying ? 'status-now-playing' : 'status-recent';
        
        // Render immediately with loading state on album art (no image yet)
        container.innerHTML = `
          <div class="status-badge pill ${statusClass}">${statusText}</div>
          <a href="${track.url}" target="_blank" rel="noopener noreferrer" class="lastfm-link">
            <div class="track-content">
              <div class="album-art album-art-loading noisy-border">
                <div class="album-art-placeholder">${track.album}</div>
              </div>
              <div class="track-info">
                <div class="track-name basic-link">${track.name} ${arrowSvg}</div>
                <div class="artist-name">By: ${track.artist}</div>
              </div>
            </div>
          </a>
        `;

        // Determine if artwork should be blocked
        let shouldBlockArtwork = false;
        
        if (track.image && track.artist && track.album) {
          // Check Last.fm API for NSFW tag
          shouldBlockArtwork = await checkNSFWTag(track.artist, track.album, 'itsmattsoria');
        }

        const albumArtEl = container.querySelector('.album-art');
        if (albumArtEl) {
          // Remove loading state
          albumArtEl.classList.remove('album-art-loading');

          // Show image or fallback based on check result
          if (shouldBlockArtwork || !track.image) {
            albumArtEl.innerHTML = `<div class="album-art-fallback"><div><div class="text-label">Album</div>${track.album}</div></div>`;
          } else {
            albumArtEl.innerHTML = `<img src="${track.image}" alt="Album art for ${track.album}" />`;
          }
        }
      } else {
        container.innerHTML = `
          <div class="lastfm-error">
            <p>Unable to load recent track</p>
          </div>
        `;
      }
    } catch (error) {
      console.error('Error loading LastFM track:', error);
      container.innerHTML = `
        <div class="lastfm-error">
          <p>Unable to load recent track</p>
        </div>
      `;
    }
  }

  // Load track when page loads
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', loadLastFMTrack);
  } else {
    loadLastFMTrack();
  }
</script>

<style is:global>
  .lastfm-track {
    width: 100%;
    position: relative;
  }

  .lastfm-loading,
  .lastfm-error {
    width: 100%;
    font-size: var(--step--1);
    color: var(--color-text-secondary);
  }

  .lastfm-error p {
    margin: 0;
  }

  .status-badge {
    margin-block-end: var(--spacing-xs);
  }

  .lastfm-link {
    display: block;
    text-decoration: none;
  }

  .lastfm-link:hover,
  .lastfm-link:focus-visible {
    .album-art img {
      transform: scale(1.02);
    }
  }

  .track-content {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-s);
    align-items: flex-start;
  }

  .album-art {
    width: 100%;
    flex-shrink: 0;
    max-width: 200px;
    position: relative;
    aspect-ratio: 1 / 1;

    img {
      width: 100%;
      height: 100%;
      display: block;
      object-fit: cover;
      border-radius: 1.5em;
      corner-shape: squircle;
      transition: transform 0.2s ease-out;
    }

    .album-art-fallback {
      width: 100%;
      height: 100%;
      display: flex;
      text-wrap: balance;
      border-radius: 1.5em;
      align-items: flex-end;
      corner-shape: squircle;
      font-size: var(--step-0);
      padding: var(--spacing-2xs);
      color: var(--color-highlight);
      font-weight: var(--font-weight-regular);
      border: 1px solid var(--color-highlight);
      background-color: var(--color-background);
    }

    .album-art-placeholder {
      width: 100%;
      height: 100%;
      display: flex;
      text-wrap: balance;
      border-radius: 1.5em;
      align-items: flex-end;
      corner-shape: squircle;
      font-size: var(--step-0);
      padding: var(--spacing-2xs);
      color: var(--color-text-secondary);
      font-weight: var(--font-weight-regular);
      border: 1px solid var(--color-border);
      background-color: var(--color-background);
    }
  }

  .album-art-loading {
    position: relative;
    opacity: 0.7;
  }

  .album-art-loading::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(
      90deg,
      transparent,
      oklch(var(--color-parts-background) / 50%),
      transparent
    );
    animation: loading-shimmer 2s infinite;
    border-radius: 1.5em;
    corner-shape: squircle;
  }

  @keyframes loading-shimmer {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(100%);
    }
  }

  .track-info {
    max-width: 250px;
    text-wrap: pretty;
  }

  .status-now-playing {
    color: var(--color-highlight);
    background-color: oklch(var(--color-parts-highlight) / 20%);
  }

  .status-recent {
    color: var(--color-text-secondary);
    background-color: oklch(var(--color-parts-text) / 10%);
  }

  .track-name {
    display: inline;
    font-size: var(--step-0);
    font-weight: var(--font-weight-regular);
  }

  .artist-name {
    font-size: var(--step--1);
    color: var(--color-text-secondary);
    margin-block-start: var(--spacing-3xs);
  }
</style>
